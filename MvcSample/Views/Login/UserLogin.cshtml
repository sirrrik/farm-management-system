@model MvcSample.Models.User

@{
    ViewBag.Title = "UserLogin";
}

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>


 

    <style>
        #login-div {
            position: absolute;
            left: 40%;
            top: 40%;
            border: 1px solid #ccc;
            padding: 10px 10px;
        }

        .feild-validation-error {
            color: red;
        }
    </style>
    <!--===============================================================================================-->

    <link href="~/bootstrap/usrlg/css/animate.css" rel="stylesheet" />
    <link href="~/bootstrap/usrlg/css/animsition.min.css" rel="stylesheet" />
    <link href="~/bootstrap/usrlg/css/daterangepicker.css" rel="stylesheet" />
    <link href="~/bootstrap/usrlg/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/bootstrap/usrlg/css/hamburgers.min.css" rel="stylesheet" />
    <link href="~/bootstrap/usrlg/css/icon-font.min.css" rel="stylesheet" />
    <link href="~/bootstrap/usrlg/css/main.css" rel="stylesheet" />
    <link href="~/bootstrap/usrlg/css/select2.min.css" rel="stylesheet" />
    <link href="~/bootstrap/usrlg/css/util.css" rel="stylesheet" />
    <link rel="icon" type="image/png" href="~/bootstrap/usrlg/images/icons/favicon.ico" />
    <link rel="icon" type="image/png" href="~/bootstrap/usrlg/images/icons/icon-google.png" />

</head>
<body>



    <!--===============================================================================================-->
    <div class="limiter">
        @using (Html.BeginForm("Autherize", "Login", FormMethod.Post))
        {
            <div class="container-login100">
                <div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
                    <form class="login100-form validate-form flex-sb flex-w">
                        <span class="login100-form-title p-b-32">
                            Employee Login
                        </span>

                        <span class="txt1 p-b-11">
                            Employeename
                        </span>
                        <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">

                            @Html.TextBoxFor(model => model.UserName, new { @class = "input100" })
                            <span class="focus-input100">@Html.ValidationMessageFor(model => model.UserName)</span>
                        </div>

                        <span class="txt1 p-b-11">
                            Password
                        </span>
                        <div class="wrap-input100 validate-input m-b-12" data-validate="Password is required">
                            <span class="btn-show-pass">
                                <i class="fa fa-eye"></i>
                            </span>

                            @Html.PasswordFor(model => model.Password, new { @class = "input100" })
                            <span class="focus-input100">@Html.ValidationMessageFor(model => model.Password)</span>
                        </div>

                        <div class="flex-sb-m w-full p-b-48">
                            <div class="contact100-form-checkbox">
                                <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
                                <label class="label-checkbox100" for="ckb1">
                                    Remember me
                                </label>
                            </div>

                            <div>
                                <a href="#" class="txt3">
                                    Forgot Password?
                                </a>
                            </div>
                        </div>

                        <div class="container-login100-form-btn">
                            <button class="login100-form-btn">
                                Login
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        }
    </div>



    <!--===============================================================================================-->
    <!--===============================================================================================-->
    <script src="~/bootstrap/js/jquery-1.10.2.min.js"></script>
    <script src="~/bootstrap/js/jquery/jquery-3.2.1.min.js"></script>
    <script src="~/bootstrap/js/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/bootstrap/js/validate.min.js"></script>



    <!--===============================================================================================-->
    <script src="~/bootstrap/usrlg/js/animsition.min.js"></script>
    <script src="~/bootstrap/usrlg/js/bootstrap.min.js"></script>
    <script src="~/bootstrap/usrlg/js/daterangepicker.js"></script>
    <script src="~/bootstrap/usrlg/js/jquery-3.2.1.min.js"></script>
    <script src="~/bootstrap/usrlg/js/main.js"></script>
    <script src="~/bootstrap/usrlg/js/moment.min.js"></script>
    <script src="~/bootstrap/usrlg/js/popper.min.js"></script>

</body>